# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
BOT_TOKEN=your_bot_token_from_botfather
ADMIN_IDS=123456789,987654321

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For local development: use Docker Compose PostgreSQL
# For production: use Neon or other PostgreSQL provider
DATABASE_URL=postgresql+asyncpg://chocoo:chocoo@localhost:5432/chocoo_skin

# ============================================
# MINI APP CONFIGURATION
# ============================================
MINI_APP_URL=https://your-mini-app-url.vercel.app
SALON_NAME=Мой Салон

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# WARNING: Set to 'false' in production! Only 'true' for local development.
SKIP_TELEGRAM_VALIDATION=false

# ============================================
# RAILWAY DEPLOYMENT (optional)
# ============================================
# Required only if you use Railway for hosting
# Get from: https://railway.app/account/tokens
RAILWAY_TOKEN=your_railway_api_token
RAILWAY_PROJECT_ID=your_project_id
RAILWAY_ENVIRONMENT_ID=your_environment_id

# Railway service IDs (get from Railway dashboard)
RAILWAY_BACKEND_SERVICE_ID=your_backend_service_id
RAILWAY_FRONTEND_SERVICE_ID=your_frontend_service_id
